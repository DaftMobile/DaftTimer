    <style name="Theme.Daftapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/daft_green</item>
        <item name="colorPrimaryVariant">@color/daft_swamp_green</item>
        <item name="colorOnPrimary">@color/daft_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/daft_grey</item>
        <item name="colorSecondaryVariant">@color/daft_grey</item>
        <item name="colorOnSecondary">@color/daft_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Daftapp.Headline6</item>
